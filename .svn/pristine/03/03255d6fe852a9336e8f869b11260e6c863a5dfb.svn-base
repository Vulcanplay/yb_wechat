page-home-finance{
  .content-ios{
    background-color: #4da9eb !important;
    /*background-image: url('../assets/img/home/finance/home_finance.png');
    background-position: top center;
    background-size: 100%;
    background-repeat: no-repeat;*/
  }
  .custom-card{
    width: 85%;
    margin: 10px auto;
    position: relative;
    background-color: white;
    border: 1px solid #f5f5f5;
    border-radius: 4px;
    z-index: -2;
  }
  .custom-card h2{
    background-image: url('../assets/img/home/finance/f_s.png');
    background-position: left center;
    background-size: 18px 19px;
    background-repeat: no-repeat;
    margin: 0;
     line-height: 44px;
    font-size: 18px;
    color: white;
    padding-left: 30px;
  }
  .custom-card .bg{
    position: absolute;
    width: 140px;
    height: 35px;
    z-index: -1;
    top: 5px;
    left: -5px;
  }
  .custom-card h3{
    font-size: 16px;
    margin: 10px 0;
    padding-left: 30px;
  }
  .custom-card p{
    color:#999999;
    margin: 5px;
    padding-left: 40px;
  }
  .custom-card p span.tag{
    color:#ffb400;
  }
  .custom-card ion-row{ padding-left: 30px;}
  .custom-card ion-col[col-3]{
    text-align: center;
  }
  .custom-card ion-col[col-3] img{
    margin: 15px 0;
    width: 35px;
    height: 35px;
  }
  .custom-card ion-col[col-9] div{
    padding: 8px 0;
    color: #999999;
    border-bottom: 1px dashed #f5f5f5;
  }
  .custom-card ion-col[col-9] div:last-child{
    border: 0;
  }
  .sq{ padding: 0 48px}
}
