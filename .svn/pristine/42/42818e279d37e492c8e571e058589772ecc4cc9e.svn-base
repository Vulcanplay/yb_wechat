    <ion-note color="danger">总计<ion-icon class="iconfont icon-custom-rmb"></ion-icon>6900.00</ion-note>
  </button>
  <button (click)="confirmOrder()" col full no-margin ion-button block color="base">结算</button>
</ion-footer>
