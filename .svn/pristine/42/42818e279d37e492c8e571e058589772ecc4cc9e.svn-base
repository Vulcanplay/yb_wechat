          <button ion-button small clear color="dark" disabled>1</button>
          <button ion-button small outline color="base"><ion-icon name="ios-add-outline"></ion-icon></button>
        </ion-buttons>
        <br/>
        <button item-end ion-button icon-only clear color="icon-gary"><ion-icon name="trash-outline"></ion-icon></button>
      </div>
