  <ion-list no-margin no-lines>
    <ion-row class="shop">
      <ion-col col-6 (click)="go(0)">
        <div class="bg" [style.background-image]="getBackground('./assets/img/home/1.jpg')"></div>
        <div class="info">
          <p><ion-note color="white">预约保养/维修</ion-note></p>
