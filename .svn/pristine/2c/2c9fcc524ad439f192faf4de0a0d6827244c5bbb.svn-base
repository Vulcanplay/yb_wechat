<ion-header>
  <ion-navbar>
    <ion-title>
      服务网点
    </ion-title>
  </ion-navbar>
  <ion-toolbar no-border class="filter-tabs">
    <ion-grid text-center no-padding>
      <ion-row>
        <ion-col tappable (click)="filterTabs(0)" [ngClass]="{'filter-tabs-bottom-line':filterTabsCtrl == 0}">
          <button ion-button small clear [color]="filterTabsCtrl == 0 ? 'base':'gary'">默认&nbsp;<ion-icon name="md-arrow-dropdown"></ion-icon></button>
        </ion-col>
        <ion-col tappable (click)="filterTabs(1)" [ngClass]="{'filter-tabs-bottom-line':filterTabsCtrl == 1}">
          <button ion-button small clear [color]="filterTabsCtrl == 1 ? 'base':'gary'">热门&nbsp;<ion-icon name="md-arrow-dropdown"></ion-icon></button>
        </ion-col>
        <ion-col tappable (click)="filterTabs(2)" [ngClass]="{'filter-tabs-bottom-line':filterTabsCtrl == 2}">
          <button ion-button small clear [color]="filterTabsCtrl == 2 ? 'base':'gary'">距离&nbsp;<ion-icon name="md-arrow-dropdown"></ion-icon></button>
        </ion-col>
      </ion-row>
    </ion-grid>
  </ion-toolbar>
</ion-header>

